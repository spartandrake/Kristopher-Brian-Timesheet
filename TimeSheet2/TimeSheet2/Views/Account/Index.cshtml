@model TimeSheet2.ViewModels.AccountViewModels.AccountIndexViewModel


@{

}

<h1>Manage Users</h1>
<a asp-action="CreateUser" class="btn btn-primary">Create A User</a>

<table class="table table-striped">
    <thead class="">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Links</th>
    </thead>
    <tbody class="">
        @{
            foreach (var user in @Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="UserDetails" asp-route-Id="@user.Id" class="btn btn-warning">Details</a>
                        <a asp-action="EditUser" asp-route-Id="@user.Id" class="btn btn-danger">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>